{
  "name": "pagemind-ai",
  "version": "1.0.0",
  "description": "AI-powered learning assistant Chrome extension",
  "type": "module",
  "scripts": {
    "dev": "npm run build:css && npm run build:js -- --watch",
    "build": "npm run build:css && npm run build:js",
    "build:js": "esbuild src/background.ts src/content.tsx --bundle --outdir=dist --format=esm --target=chrome100 --loader:.tsx=tsx --loader:.ts=ts --jsx=automatic",
    "build:css": "tailwindcss -i ./src/styles/content.css -o ./dist/content.css --minify",
    "watch:css": "tailwindcss -i ./src/styles/content.css -o ./dist/content.css --watch"
  },
  "dependencies": {
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "esbuild": "^0.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
